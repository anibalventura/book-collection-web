<main>
  <div class="row justify-content-center mb-4">
    <div class="col-11">
      <div class="card shadow-sm">
        <div class="card-header bg-primary bg-opacity-75">
          <h3 class="text-white">
            Books Maintenance
            <a class="btn btn-success shadow-sm" href="/books/create">Create</a>
          </h3>

        </div>
        {{#if hasBooks}}
          <div class="card-body">
            <div class="row">

              {{#each books as |book|}}
                <div class="col-3 mb-3">
                  <div class="card shadow-sm h-100">
                    <img
                      src="{{book.imagePath}}"
                      class="img-thumbnail card-img-top"
                      alt="{{book.name}}"
                    />
                    <div class="card-body">
                      <h4>{{book.title}}</h4>
                      <div>
                        <div>
                          <label class="card-subtitle text-muted">Publication
                            Year:</label>
                          <span class="">{{book.publicationYear}}</span>
                        </div>
                        <div>
                          <label
                            class="card-subtitle text-muted"
                          >Category:</label>
                          <span
                            class=""
                          >{{book.category.dataValues.name}}</span>
                        </div>
                        <div>
                          <label
                            class="card-subtitle text-muted"
                          >Author:</label>
                          <span class="">{{book.author.dataValues.name}}</span>
                        </div>
                        <div>
                          <label
                            class="card-subtitle text-muted"
                          >Editorial:</label>
                          <span
                            class=""
                          >{{book.editorial.dataValues.name}}</span>
                        </div>
                        <div
                          class="mt-3 d-flex justify-content-between align-items-center"
                        >
                          <div class="btn-group">
                            <a
                              href="/books/edit/{{book.id}}"
                              class="btn btn-sm btn-outline-warning"
                            >Edit</a>
                            <a
                              href="/books/delete/{{book.id}}"
                              class="btn btn-sm btn-outline-danger"
                            >Delete</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{else}}
          <div class="container-fluid text-center m-5">
            <h4>No Books created!</h4>
            <p>Start creating one.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</main>