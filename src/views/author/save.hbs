<main>
  <div class="row">
    <div class="col-5 offset-3">
        <div class="card shadow-sm">
        <div class="card-header {{#if editMode}}bg-warning{{else}}bg-success{{/if}} text-light">
          <h4>{{#if editMode}}Edit Author{{else}}Create a Author{{/if}}</h4>
        </div>
        <div class="card-body">
          <form method="post" action="{{#if editMode}}/authors/edit{{else}}/authors/create{{/if}}">

            {{#if editMode}}
                <input type="hidden" name="authorId" value="{{author.id}}">
            {{/if}}

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="name" class="form-label"><strong
                        >Name:</strong></label>
                    <input
                        required
                        type="text"
                        id="name"
                        name="name"
                        placeholder="Enter a name..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{author.name}}{{/if}}"
                    />
                </div>
            </div>

            <div class="form-group row mb-3">
                <div class="col">
                    <label for="email" class="form-label"><strong
                        >Email:</strong></label>
                    <input
                        required
                        type="email"
                        id="email"
                        name="email"
                        placeholder="Enter a email..."
                        class="form-control shadow-sm"
                        value="{{#if editMode}}{{author.email}}{{/if}}"
                    />
                </div>
            </div>

            <div class="container-fluid text-center mt-4">
                <button
                type="submit"
                class="btn btn-primary shadow-sm"
                >Save</button>
                <a href="/authors" class="btn btn-secondary shadow-sm">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>