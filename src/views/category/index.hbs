<main>
  <div class="row justify-content-center mb-4">
    <div class="col-11">
      <div class="card shadow-sm">
        <div class="card-header bg-primary bg-opacity-75">
          <h3 class="text-white">
            Categories Maintenance
            <a
              class="btn btn-success shadow-sm"
              href="/categories/create"
            >Create</a>
          </h3>

        </div>
        {{#if hasCategories}}
          <div class="card-body">
            <div class="row">

              {{#each categories as |category|}}
                <div class="col-3 mb-3">
                  <div class="card shadow-sm h-100">
                    <div class="card-body">

                      <h4>{{category.name}}</h4>
                      <div>
                        <div>
                          <span class="">{{category.description}}</span>
                        </div>
                        <div>
                          <label class="card-subtitle text-muted">Books:</label>
                          <span class="">{{category.count}}</span>
                        </div>
                      </div>
                      <div
                        class="mt-3 d-flex justify-content-between align-items-center"
                      >
                        <div class="btn-group">
                          <a
                            href="/categories/edit/{{category.id}}"
                            class="btn btn-sm btn-outline-warning"
                          >Edit</a>
                          <a
                            href="/categories/delete/{{category.id}}"
                            class="btn btn-sm btn-outline-danger"
                          >Delete</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

              {{/each}}
            </div>
          </div>
        {{else}}
          <div class="container-fluid text-center m-5">
            <h4>No Categories created!</h4>
            <p>Start creating one.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</main>